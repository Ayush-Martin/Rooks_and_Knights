        function removeCoupon(couponID, couponDiscount) {
          document.getElementById(`coupon_${couponID}`).remove();
          const totalAmount = document.getElementById("totalAmount");
          const couponDiscountAmount = document.getElementById(
            "couponDiscountAmount"
          );
          const discountAmount = document.getElementById("discountAmount");

          totalAmount.innerText =
            parseInt(totalAmount.textContent) + parseInt(couponDiscount);
          couponDiscountAmount.innerText =
            couponDiscountAmount.textContent - couponDiscount;
          discountAmount.innerText = discountAmount.textContent - couponDiscount;
          availableCoupon();
        }

