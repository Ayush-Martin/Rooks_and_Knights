<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
    <style>
      /* Custom Dashboard UI Styles */
      body {
        background-color: #f8f9fa;
      }

      .checkout-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-bottom: 30px;
        border: 1px solid #f0f0f0;
      }

      .checkout-card-header {
        font-size: 20px;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f5f5f5;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      /* Sidebar Styles */
      .dashboard-sidebar {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        border: 1px solid #f0f0f0;
      }

      .user-profile-header {
        background: linear-gradient(135deg, #333 0%, #000 100%);
        padding: 30px 20px;
        text-align: center;
        color: #fff;
      }

      .user-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(255, 255, 255, 0.3);
        margin-bottom: 10px;
      }

      .sidebar-nav {
        padding: 10px 0;
      }

      .sidebar-nav a,
      .sidebar-nav button {
        display: flex;
        align-items: center;
        padding: 15px 25px;
        color: #555;
        text-decoration: none;
        transition: all 0.3s;
        font-weight: 500;
        border-left: 4px solid transparent;
        background: none;
        border-top: none;
        border-right: none;
        border-bottom: none;
        width: 100%;
        text-align: left;
      }

      .sidebar-nav a:hover,
      .sidebar-nav button:hover {
        background-color: #f9f9f9;
        color: #333;
      }

      .sidebar-nav a.active {
        background-color: #f0f7ff;
        color: #333;
        border-left-color: #333;
      }

      .sidebar-nav i {
        width: 25px;
        margin-right: 10px;
        font-size: 18px;
      }

      /* Form Styles */
      .form-label-custom {
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .form-control-custom {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        background-color: #fff;
        transition: all 0.3s;
      }

      .form-control-custom:focus {
        border-color: #333;
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
      }

      .btn-custom-primary {
        background-color: #333;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        transition: all 0.3s;
      }

      .btn-custom-primary:hover {
        background-color: #000;
        transform: translateY(-2px);
      }

      /* Address Card Refined */
      .address-card-item {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        position: relative;
        background: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
      }

      .address-card-item:hover {
        border-color: #333;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        transform: translateY(-3px);
      }

      .address-type-badge {
        background: #f0f0f0;
        color: #333;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: inline-block;
      }

      .address-actions-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: 1px solid #eee;
        background: #fff;
        color: #555;
      }

      .address-actions-btn:hover {
        background: #333;
        color: #fff;
        border-color: #333;
      }

      /* Order Card Refined */
      .order-card-item {
        border: 1px solid #eee;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 25px;
        transition: all 0.3s;
        background: #fff;
      }

      .order-card-item:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        transform: translateY(-2px);
      }

      .order-header {
        background: #fcfcfc;
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
      }

      .order-body {
        padding: 20px;
      }

      .order-product-thumbs {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
        overflow-x: auto;
        padding-bottom: 5px;
      }

      .order-product-thumb {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
        border: 1px solid #eee;
        flex-shrink: 0;
      }

      .more-products-count {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        background: #f8f9fa;
        border: 1px solid #eee;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: 600;
        color: #555;
        flex-shrink: 0;
      }

      .order-status-badge {
        padding: 6px 14px;
        border-radius: 30px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .status-delivered {
        background-color: #d4edda;
        color: #155724;
      }

      .status-cancelled {
        background-color: #f8d7da;
        color: #721c24;
      }

      .status-pending {
        background-color: #fff3cd;
        color: #856404;
      }

      .status-shipped {
        background-color: #cce5ff;
        color: #004085;
      }

      .status-placed {
        background-color: #d1ecf1;
        color: #0c5460;
      }

      /* Modal Styles */
      .modal-content-custom {
        border-radius: 16px;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      }

      .modal-header-custom {
        border-bottom: 1px solid #f0f0f0;
        padding: 20px 25px;
      }

      .modal-body-custom {
        padding: 25px;
      }

      .hidden {
        display: none;
      }
    </style>
</head>

<body class="">
  <!-- Header -->
  <header class="header-v4"><%- include('./partials/header.ejs') %></header>

  <div class="bg0 p-t-75 p-b-110">
    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-4 col-lg-3 m-b-30">
          <div class="dashboard-sidebar">
            <div class="user-profile-header">
              <% if(userProfile.profilePicture) {%>
                <img class="user-avatar" src="<% userProfile.profilePicture %>" alt="User">
                <% }else{ %>
                  <div class="user-avatar d-flex align-items-center justify-content-center bg-light text-dark mx-auto">
                    <i class="fa fa-user fa-2x"></i>
                  </div>
                  <% } %>
                    <h5 class="mt-3 mb-0">
                      <%= userProfile.username %>
                    </h5>
                    <small class="text-white-50">
                      <%= userProfile.email %>
                    </small>
            </div>
            <div class="sidebar-nav">
              <a href="#" id="profile-link" onclick="showSection('profile', this)" class="active">
                <i class="fa fa-user"></i> Profile
              </a>
              <a href="#" id="address-link" onclick="showSection('address', this)">
                <i class="fa fa-map-marker-alt"></i> Addresses
              </a>
              <a href="#" id="orders-link" onclick="showSection('orders', this)">
                <i class="fa fa-shopping-bag"></i> Orders
              </a>
              <a href="/user/account/changePassword">
                <i class="fa fa-key"></i> Change Password
              </a>
              <button onclick="logout()">
                <i class="fa fa-sign-out-alt"></i> Logout
              </button>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-8 col-lg-9">

          <!-- Profile Section -->
          <div id="profile-section" class="section">
            <div class="checkout-card">
              <div class="checkout-card-header">
                My Profile
              </div>
              <form action="" onsubmit="updateProfile(event)">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="username" class="form-label-custom">Full Name</label>
                    <input type="text" class="form-control form-control-custom" id="username"
                      value="<%= userProfile.username %>">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="email" class="form-label-custom">Email Address</label>
                    <input type="email" class="form-control form-control-custom" id="email"
                      value="<%= userProfile.email %>" readonly>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="phoneNumber" class="form-label-custom">Phone Number</label>
                    <input type="text" class="form-control form-control-custom" id="phoneNumber"
                      value="<%= userProfile.phoneNumber %>">
                  </div>
                  <div class="col-md-12 mb-4">
                    <label for="referalLink" class="form-label-custom">Referral Link</label>
                    <div class="input-group">
                      <input type="text" class="form-control form-control-custom" id="referalLink" readonly
                        value="https://<%= domain %>/user/register?referalID=<%= userProfile.referalID %>"
                        style="border-top-right-radius: 0; border-bottom-right-radius: 0;">
                      <button class="btn btn-outline-secondary" type="button"
                        onclick="navigator.clipboard.writeText(document.getElementById('referalLink').value)"
                        style="border-top-right-radius: 8px; border-bottom-right-radius: 8px;">
                        <i class="fa fa-copy"></i>
                      </button>
                    </div>
                  </div>
                </div>
                <button class="btn btn-custom-primary">Save Changes</button>
              </form>
            </div>
          </div>

          <!-- Address Section -->
          <div id="address-section" class="section hidden">
            <div class="checkout-card">
              <div class="checkout-card-header">
                <span>Address Book</span>
                <button class="btn btn-sm btn-dark rounded-pill px-3" data-toggle="modal"
                  data-target="#addAddressModel">
                  <i class="fa fa-plus me-1"></i> Add New
                </button>
              </div>

              <div class="row">
                <% if(address.address.length===0) { %>
                  <div class="col-12 text-center py-5">
                    <div class="mb-3 text-muted opacity-50">
                      <i class="fa fa-map-marker-alt fa-3x"></i>
                    </div>
                    <h5 class="text-muted">No addresses found</h5>
                    <p class="text-muted small">Add a new address to get started.</p>
                  </div>
                  <% } %>

                    <% address.address.forEach((addressItem)=>{ %>
                      <div class="col-lg-6" id="address-card-<%= addressItem._id %>">
                        <div class="address-card-item">
                          <div class="d-flex justify-content-between align-items-start">
                            <span class="address-type-badge">
                              <%= addressItem.addressTitle %>
                            </span>
                            <div class="d-flex gap-2">
                              <button class="address-actions-btn" title="Edit"
                                data-address-item="<%= JSON.stringify(addressItem)%>"
                                onclick="editAddressModel(event,'<%=addressItem._id%>')" data-toggle="modal"
                                data-target="#editAddressModel">
                                <i class="fa fa-pencil-alt" style="font-size: 12px;"></i>
                              </button>
                              <button class="address-actions-btn text-danger" title="Remove"
                                onclick="removeAddress(event,'<%=addressItem._id%>')">
                                <i class="fa fa-trash" style="font-size: 12px;"></i>
                              </button>
                            </div>
                          </div>

                          <div class="mb-3 mt-2 flex-grow-1">
                            <h6 class="font-weight-bold mb-2 text-dark">
                              <%= userProfile.username %>
                            </h6>
                            <p class="text-muted mb-0 small" style="line-height: 1.6;">
                              <%= addressItem.streetAddress %><br>
                                <%= addressItem.city %>, <%= addressItem.state %><br>
                                    <strong>PIN:</strong>
                                    <%= addressItem.pinCode %>
                            </p>
                          </div>
                        </div>
                      </div>
                      <% }) %>
              </div>
            </div>
          </div>

          <!-- Orders Section -->
          <div id="orders-section" class="section hidden">
            <div class="checkout-card">
              <div class="checkout-card-header">
                My Orders
              </div>

              <% if(orders.length===0) { %>
                <div class="text-center py-5">
                  <div class="mb-3 text-muted opacity-50">
                    <i class="fa fa-shopping-bag fa-3x"></i>
                  </div>
                  <h5 class="text-muted">No orders yet</h5>
                  <a href="/shop" class="btn btn-custom-primary mt-3">Start Shopping</a>
                </div>
                <% } %>

                  <% orders.forEach((order)=>{ %>
                    <div class="order-card-item">
                      <div class="order-header">
                        <div>
                          <span class="text-muted small d-block" style="font-size: 11px; letter-spacing: 0.5px;">ORDER
                            PLACED</span>
                          <span class="font-weight-bold text-dark">
                            <%= order.createdAt.toLocaleDateString() %>
                          </span>
                        </div>
                        <div>
                          <span class="text-muted small d-block"
                            style="font-size: 11px; letter-spacing: 0.5px;">TOTAL</span>
                          <span class="font-weight-bold text-dark">₹<%= order.totalAmmount %></span>
                        </div>
                        <div>
                          <span class="text-muted small d-block" style="font-size: 11px; letter-spacing: 0.5px;">ORDER
                            ID</span>
                          <span class="font-weight-bold text-dark">#<%= order._id.toString().slice(-8).toUpperCase() %>
                              </span>
                        </div>
                        <div class="ms-auto">
                          <span class="order-status-badge status-<%= order.orderStatus %>">
                            <%= order.orderStatus %>
                          </span>
                        </div>
                      </div>
                      <div class="order-body">
                        <div class="row align-items-center">
                          <div class="col-md-8 mb-3 mb-md-0">
                            <div class="order-product-thumbs">
                              <% order.products.slice(0, 4).forEach(product=> { %>
                                <img src="<%= product.productID.productImage1 %>" class="order-product-thumb"
                                  alt="Product">
                                <% }) %>
                                  <% if(order.products.length> 4) { %>
                                    <div class="more-products-count">
                                      +<%= order.products.length - 4 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="text-muted small">
                              <%= order.products.length %> item(s) in this order
                            </div>
                          </div>
                          <div class="col-md-4 text-md-end">
                            <div class="d-flex flex-column gap-2 align-items-md-end">
                              <button type="button" class="btn btn-outline-dark btn-sm rounded-pill px-4"
                                onclick="orderViewTable(event)" data-toggle="modal" data-target="#orderModal"
                                data-order-item="<%= JSON.stringify(order) %>">
                                View Details
                              </button>

                              <% if(order.orderStatus=='delivered' ) {%>
                                <button class="btn btn-link btn-sm text-decoration-none p-0"
                                  onclick="downloadInvoice('<%= order._id %>')">
                                  <i class="fas fa-download me-1"></i> Download Invoice
                                </button>
                                <% } %>
                            </div>
                          </div>
                        </div>

                        <% if(order.paymentStatus=='pending' && order.orderStatus !=='cancelled' ){%>
                          <div
                            class="alert alert-warning mt-3 mb-0 d-flex justify-content-between align-items-center p-2 small rounded-3 border-warning">
                            <span class="text-warning-dark"><i class="fa fa-exclamation-circle me-2"></i> Payment
                              Pending</span>
                            <div>
                              <button class="btn btn-sm btn-warning me-1"
                                onclick="proceedToPayment('<%= order._id %>','<%= order.totalAmmount %>','Wallet')">
                                Pay via Wallet
                              </button>
                              <button class="btn btn-sm btn-success"
                                onclick="proceedToPayment('<%= order._id %>','<%= order.totalAmmount %>','Razorpay')">
                                Pay Online
                              </button>
                            </div>
                          </div>
                          <%} %>
                      </div>
                    </div>
                    <% }) %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Add Address Modal -->
  <div class="modal fade" id="addAddressModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content modal-content-custom">
        <div class="modal-header modal-header-custom">
          <h5 class="modal-title font-weight-bold">New Address</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body modal-body-custom">
          <form id="addAddressForm">
            <div class="form-group mb-3">
              <label for="addressTitle" class="form-label-custom">Address Title</label>
              <input type="text" class="form-control form-control-custom" id="addressTitle"
                placeholder="e.g. Home, Work" />
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="state" class="form-label-custom">State</label>
                <input type="text" class="form-control form-control-custom" id="state" />
              </div>
              <div class="col-md-6 mb-3">
                <label for="city" class="form-label-custom">City</label>
                <input type="text" class="form-control form-control-custom" id="city" />
              </div>
            </div>
            <div class="form-group mb-3">
              <label for="pinCode" class="form-label-custom">Pin Code</label>
              <input type="text" class="form-control form-control-custom" id="pinCode" />
            </div>
            <div class="form-group mb-3">
              <label for="streetAddress" class="form-label-custom">Street Address</label>
              <textarea class="form-control form-control-custom" id="streetAddress" rows="3"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer border-top-0 px-4 pb-4">
          <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-custom-primary rounded-pill px-4" onclick="addNewAddress(event)">Save
            Address</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit Address Modal -->
  <div class="modal fade" id="editAddressModel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content modal-content-custom">
        <div class="modal-header modal-header-custom">
          <h5 class="modal-title font-weight-bold">Edit Address</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body modal-body-custom">
          <form>
            <div class="form-group mb-3">
              <label for="addressTitleEdit" class="form-label-custom">Address Title</label>
              <input type="text" class="form-control form-control-custom" id="addressTitleEdit" />
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="stateEdit" class="form-label-custom">State</label>
                <input type="text" class="form-control form-control-custom" id="stateEdit" />
              </div>
              <div class="col-md-6 mb-3">
                <label for="cityEdit" class="form-label-custom">City</label>
                <input type="text" class="form-control form-control-custom" id="cityEdit" />
              </div>
            </div>
            <div class="form-group mb-3">
              <label for="pinCodeEdit" class="form-label-custom">Pin Code</label>
              <input type="text" class="form-control form-control-custom" id="pinCodeEdit" />
            </div>
            <div class="form-group mb-3">
              <label for="streetAddressEdit" class="form-label-custom">Street Address</label>
              <textarea class="form-control form-control-custom" id="streetAddressEdit" rows="3"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer border-top-0 px-4 pb-4" id="editAddressDiv">
          <button type="button" class="btn btn-secondary rounded-pill px-4" data-dismiss="modal">Cancel</button>
          <!-- Button injected by JS -->
        </div>
      </div>
    </div>
  </div>

  <!-- Order Details Modal -->
  <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content modal-content-custom">
        <div class="modal-header modal-header-custom">
          <h5 class="modal-title font-weight-bold" id="orderModalLabel">Order Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body modal-body-custom">
          <!-- Order Summary -->
          <div class="order-summary mb-4 p-3 bg-light rounded border">
            <div class="row mb-2">
              <div class="col-6">
                <strong class="text-muted small d-block">ORDER DATE</strong>
                <span id="orderDate" class="font-weight-bold"></span>
              </div>
              <div class="col-6">
                <strong class="text-muted small d-block">PRODUCTS</strong>
                <span id="orderNoOfProducts" class="font-weight-bold"></span>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-6">
                <strong class="text-muted small d-block">TOTAL AMOUNT</strong>
                <span class="font-weight-bold text-primary">₹<span id="orderTotalAmount"></span></span>
              </div>
              <div class="col-6">
                <strong class="text-muted small d-block">PAYMENT STATUS</strong>
                <span id="orderPaymentStatus" class="badge bg-info text-white"></span>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-6">
                <strong class="text-muted small d-block">ORDER STATUS</strong>
                <span id="orderStatus" class="badge bg-secondary text-white"></span>
              </div>
              <div class="col-12 mt-2">
                <strong class="text-muted small d-block">SHIPPING ADDRESS</strong>
                <span id="orderAddress" class="small"></span>
              </div>
            </div>
          </div>

          <!-- Products Table -->
          <div class="order-products table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Product</th>
                  <th>Name</th>
                  <th>Qty</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="orderTableBody"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg3 p-t-75 p-b-32">
    <%- include('./partials/footer.ejs') %>
  </footer>

  <%- include('./partials/backToTop.ejs') %>
    <%- include('./partials/scriptBody.ejs') %>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

      <script>
        // Tab Switching Logic
        function showSection(sectionId, element) {
          // Hide all sections
          document.querySelectorAll('.section').forEach(sec => sec.classList.add('hidden'));

          // Show selected section
          document.getElementById(sectionId + '-section').classList.remove('hidden');

          // Update active state in sidebar
          document.querySelectorAll('.sidebar-nav a').forEach(link => link.classList.remove('active'));
          element.classList.add('active');
        }

        // Preserve existing functions
        function orderViewTable(e) {
          const orderData = e.target.closest("button");
          const order = JSON.parse(orderData.getAttribute("data-order-item"));
          const products = order.products;

          document.getElementById("orderDate").innerText = order.createdAt.split("T")[0];
          document.getElementById("orderNoOfProducts").innerText = products.length;
          document.getElementById("orderTotalAmount").innerText = order.totalAmmount;
          document.getElementById("orderStatus").innerText = order.orderStatus;
          document.getElementById("orderPaymentStatus").innerText = order.paymentStatus;
          document.getElementById("orderAddress").innerText = `${order.address.addressTitle}: ${order.address.state}, ${order.address.city}, ${order.address.pinCode}, ${order.address.streetAddress}`;

          const tableBody = document.getElementById("orderTableBody");
          tableBody.innerHTML = "";

          products.forEach((order) => {
            const row = document.createElement("tr");
            let actionButton = "";

            if (order.status === "pending") {
              actionButton = `<button class="btn btn-danger btn-sm" onclick="cancelOrder('${order._id}', '${order.productID._id}' , ${order.quantity} ,${order.amountPaid})">Cancel</button>`;
            } else if (order.status === "delivered" && order.returnStatus == "notRequested") {
              actionButton = `<button class="btn btn-warning btn-sm" onclick="returnOrder('${order._id}')">Return</button>`;
            } else if (order.status === "delivered") {
              actionButton = `<span class="badge bg-info">Return ${order.returnStatus}</span>`;
            }

            row.innerHTML = `
          <td><img src="${order.productID.productImage1}" alt="${order.productName}" width="50px" class="rounded"></td>
          <td>${order.productID.productName}</td>
          <td>${order.quantity}</td>
          <td>${order.amountPaid}</td>
          <td><span class="badge bg-light text-dark border">${order.status}</span></td>
          <td>${actionButton}</td>
        `;
            tableBody.appendChild(row);
          });
        }

        function logout() {
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, Logout!",
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                const res = await axios.post("/user/logout");
                const data = res.data;
                if (data.success) {
                  Swal.fire({
                    title: "Logged Out",
                    icon: "success",
                    timer: 2000,
                  });
                  setTimeout(() => {
                    window.location.href = data.successRedirect;
                  }, 2000);
                }
              } catch (err) {
                console.log(err);
              }
            }
          });
        }

        async function updateProfile(event) {
          event.preventDefault();
          let username = document.getElementById("username").value;
          let phoneNumber = document.getElementById("phoneNumber").value;

          const error = checkValidText(username, "username", 3, 10, false, false, false) || checkValidPhoneNumber(phoneNumber.toString());

          if (error) {
            Swal.fire({ icon: "error", title: "Validation Error", text: error });
            return;
          }
          try {
            const res = await axios.put("/user/account", { username, phoneNumber });
            const data = res.data;
            if (data.success) {
              Swal.fire({ title: "Updated", text: "Your Profile has been updated", icon: "success", timer: 2000 });
              const updatedUser = data.user;
              if (updatedUser) {
                document.querySelector('.user-profile-header h5').textContent = updatedUser.username;
              }
            }
          } catch (err) {
            console.log(err);
            Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
          }
        }

        async function addNewAddress(event) {
          event.preventDefault();
          let addressTitle = document.getElementById("addressTitle").value;
          let state = document.getElementById("state").value;
          let city = document.getElementById("city").value;
          let pinCode = document.getElementById("pinCode").value;
          let streetAddress = document.getElementById("streetAddress").value;

          const error = ValidateAddress(addressTitle, state, city, pinCode, streetAddress);

          if (error) {
            Swal.fire({ icon: "error", title: "Validation Error", text: error });
            return;
          }
          try {
            const res = await axios.post("/address/", { addressTitle, state, city, pinCode, streetAddress });
            const data = res.data;
            if (data.success) {
              Swal.fire({ title: "Added", text: "New address has been added", icon: "success", timer: 2000 });
              $('#addAddressModel').modal('hide');
              document.getElementById('addAddressForm').reset();
              setTimeout(() => window.location.reload(), 2000);
            }
          } catch (err) {
            console.log(err);
            Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
          }
        }

        function editAddressModel(event, id) {
          const button = event.target.closest('button');
          const address = JSON.parse(button.getAttribute('data-address-item'));

          document.getElementById('addressTitleEdit').value = address.addressTitle;
          document.getElementById('stateEdit').value = address.state;
          document.getElementById('cityEdit').value = address.city;
          document.getElementById('pinCodeEdit').value = address.pinCode;
          document.getElementById('streetAddressEdit').value = address.streetAddress;

          const editDiv = document.getElementById('editAddressDiv');
          // Remove old save button if exists
          const oldBtn = editDiv.querySelector('.btn-custom-primary');
          if (oldBtn) oldBtn.remove();

          const saveBtn = document.createElement('button');
          saveBtn.type = 'button';
          saveBtn.className = 'btn btn-custom-primary rounded-pill px-4';
          saveBtn.innerText = 'Save Changes';
          saveBtn.onclick = (e) => editAddress(e, id);
          editDiv.appendChild(saveBtn);
        }

        async function editAddress(event, _id) {
          event.preventDefault();
          let addressTitle = document.getElementById("addressTitleEdit").value;
          let state = document.getElementById("stateEdit").value;
          let city = document.getElementById("cityEdit").value;
          let pinCode = document.getElementById("pinCodeEdit").value;
          let streetAddress = document.getElementById("streetAddressEdit").value;

          const error = ValidateAddress(addressTitle, state, city, pinCode, streetAddress);

          if (error) {
            Swal.fire({ icon: "error", title: "Validation Error", text: error });
            return;
          }

          try {
            const res = await axios.put(`/address/${_id}`, { addressTitle, state, city, pinCode, streetAddress });
            const data = res.data;
            if (data.success) {
              Swal.fire({ title: "Edited", text: "Address has been edited", icon: "success", timer: 2000 });
              $('#editAddressModel').modal('hide');
              setTimeout(() => window.location.reload(), 2000);
            }
          } catch (err) {
            console.log(err);
            Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
          }
        }

        async function removeAddress(event, _id) {
          event.preventDefault();
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                const res = await axios.delete(`/address/${_id}`);
                const data = res.data;
                if (data.success) {
                  Swal.fire({ title: "Deleted!", text: "Address has been deleted.", icon: "success", timer: 2000 });
                  setTimeout(() => window.location.reload(), 2000);
                }
              } catch (err) {
                console.log(err);
                Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
              }
            }
          });
        }

        async function cancelOrder(orderProductsID, productID, productQuantity, amountPaid) {
          const result = await Swal.fire({
            title: "Are you sure?",
            text: "You want to cancel this order",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes",
          });

          if (result.isConfirmed) {
            try {
              const res = await axios.patch(`/order/cancel/${orderProductsID}`, { productID, productQuantity, amountPaid });
              const data = res.data;
              if (data.success) {
                Swal.fire({ title: "Canceled", text: "Your order has been canceled", icon: "success", timer: 2000 });
                setTimeout(() => window.location.reload(), 2000);
              }
            } catch (err) {
              console.log(err);
              Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
            }
          }
        }

        async function returnOrder(orderProductsID) {
          const result = await Swal.fire({
            title: "Select a reason for return",
            input: "select",
            inputOptions: {
              "Return Reasons": {
                "wrong-item": "Received the Wrong Item",
                damaged: "Item Arrived Damaged",
                "not-as-described": "Product is Not as Described",
                "size-fit": "Size or Fit Issues",
                "changed-mind": "Changed My Mind",
                "poor-quality": "Product Quality is Poor",
                "late-arrival": "Item Arrived Late",
                "better-price": "Found a Better Price Elsewhere",
                "wrong-product": "Ordered the Wrong Product",
                "missing-parts": "Missing Parts or Accessories",
              },
            },
            inputPlaceholder: "Select a reason",
            showCancelButton: true,
            inputValidator: (value) => !value ? "You need to select a reason." : null,
          });

          if (result.isConfirmed && result.value) {
            try {
              const res = await axios.patch(`/order/return/returnProduct/${orderProductsID}`, { returnReason: result.value });
              const data = res.data;
              if (data.success) {
                Swal.fire({ title: "Sent request", text: "Your order return request has been sent", icon: "success", timer: 2000 });
                setTimeout(() => window.location.reload(), 2000);
              }
            } catch (error) {
              console.error("Error:", error);
              Swal.fire({ icon: "error", title: "Error", text: error.response?.data?.error || "Something went wrong!" });
            }
          }
        }

        async function proceedToPayment(orderID, totalAmount, paymentMethod) {
          try {
            const res = await axios.post(`/order/pendingProceedToPayment?orderID=${orderID}&&totalAmount=${totalAmount}&&paymentMethod=${paymentMethod}`);
            const data = res.data;
            if (data.success) {
              Swal.fire({ title: "Payment completed", icon: "success", timer: 2000 });
              setTimeout(() => window.location.href = data.successRedirect, 2000);
            }

            if (data.razorpayOrder) {
              var options = {
                key: "rzp_test_RSspzzgBAA2ViI",
                name: "Rook & Knights",
                description: "Test Transaction",
                image: "https://imgs.search.brave.com/jsPXFiH4YxTvzVbUvQMILb4V32Y6I0DxlC2p3CaqAfA/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9ibG9n/LnBob3RvYWRraW5n/LmNvbS93cC1jb250/ZW50L3VwbG9hZHMv/MjAyMy8wNS8xNjgy/OTQ2NDIzMzgxLTEu/anBn",
                order_id: data.razorpayOrder.id,
                callback_url: "/order/completePayment",
                theme: { color: "#454545" },
              };
              var rzp1 = new Razorpay(options);
              rzp1.open();
            }
          } catch (err) {
            console.log(err);
            Swal.fire({ icon: "error", title: "Error", text: err.response?.data?.error || "Something went wrong!" });
          }
        }

        function downloadInvoice(orderID) {
          window.location.href = `/order/downloadInvoicePdf/${orderID}`;
        }

        function ValidateAddress(addressTitle, state, city, pinCode, streetAddress) {
          return (
            checkValidText(addressTitle, "Address Title", 3, 20, true, true, false) ||
            checkValidText(state, "State", 3, 25, true, false, false) ||
            checkValidText(city, "City", 3, 25, true, false, false) ||
            checkPincode(pinCode) ||
            checkValidText(streetAddress, "Street Address", 10, 100, true, true, true)
          );
        }
      </script>
