<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %>

    <body style="height: auto !important;">
        <div class="wrapper">
            <%- include('./partials/slidebar') %>

                <div id="content" class="container-fluid">
                    <h1 class="m-b-10 admin_title">Categories</h1>
                    <div class="container p-b-50">
                        <div class="search-bar-container">
                            <!-- Search Form -->
                            <form action="/admin/categories" method="GET" class="search-input-group">
                                <input type="text" id="search-input" name="search" class="form-control search-input"
                                    placeholder="search" value="<%= searchFilter ? searchFilter:null %>">
                                <a href="/admin/categories?search=">
                                    <button type="button" class="btn-clear" id="clear-btn">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </a>
                                <button type="submit" class="btn-search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>

                        </div>

                        <button class="btn-add" data-toggle="modal" data-target="#addCategoryModel">
                            <i class="fas fa-plus"></i> New Category
                        </button>



                    </div>

                    <div class="table-responsive">

                        <table class="table table-bordered m-t-10">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Category Description</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                <% categoryList.forEach(category=> { %>
                                    <tr id="category-row-<%= category._id %>">
                                        <td>
                                            <%= category.categoryName %>
                                        </td>
                                        <td>
                                            <%= category.categoryDescription %>
                                        </td>
                                        <td><button class="btn btn-dark btn-sm" type="submit"
                                                data-category-item="<%= JSON.stringify(category)%>"
                                                onclick="editCategoryModel(event,'<%=category._id%>')"
                                                data-toggle="modal" data-target="#editCategoryModel">
                                                <i class="fas fa-pencil-alt"></i></button>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm fs-15"
                                                onclick="listUnlistCategory(this, '<%=category._id%>', '<%= !category.isListed %>')">
                                                <p>
                                                    <% if(category.isListed){ %>
                                                        <i class="fas fa-times-circle"></i>
                                                        Unlist
                                                        <% }else{ %>
                                                            <i class="fas fa-list"></i>
                                                            List
                                                            <% } %>
                                                </p>

                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div class="flex-c-m flex-w w-full p-t-45 gap-10">
                        <!-- Previous Button -->
                        <a href="/admin/categories?search=<%= searchFilter %>&&page=<%= (currentPage>1)? Number(currentPage)-1:1 %>"
                            class="m-r-20 text-dark">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                        <P class="m-r-20 text-dark">page : <%= currentPage %> of
                                <%= Math.ceil(totalNoOfPages) %>
                        </P>
                        <!-- Next Button -->
                        <a href="/admin/categories?search=<%= searchFilter %>&&page=<%= (currentPage<totalNoOfPages)? Number(currentPage)+1:currentPage %>"
                            class=" text-dark">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>

                    </div>

                </div>



                <!-- modal to add new Category -->
                <div class="modal fade m-t-50" id="addCategoryModel" tabindex="-2" role="dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    New category</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="categoryName" class="col-form-label">Category
                                            Name</label>
                                        <input type="text" class="form-control" id="categoryName">
                                    </div>
                                    <div class="form-group">
                                        <label for="categoryDescription" class="col-form-label">Cateogry
                                            Description</label>
                                        <input type="text" class="form-control" id="categoryDescription">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" onclick="addCategory(event)">Add</button>
                            </div>
                        </div>
                    </div>
                </div>



                <!-- modal to edit category -->
                <div class="modal fade m-t-50" id="editCategoryModel" tabindex="-2" role="dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    Edit Category</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="categoryNameEdit" class="col-form-label">Category
                                            Name</label>
                                        <input type="text" class="form-control" id="categoryNameEdit">
                                    </div>
                                    <div class="form-group">
                                        <label for="categoryDescriptionEdit" class="col-form-label">Category
                                            Description</label>
                                        <input type="text" class="form-control" id="categoryDescriptionEdit">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer" id="editcategoryDiv">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>



                <%- include('./partials/footer') %>
                    <script src="/public/JS/checkCategorySubcategoryValid.js"></script>
                    <script>
                        async function addCategory(event) {
                            event.preventDefault()
                            const categoryName = document.getElementById('categoryName').value;
                            const categoryDescription = document.getElementById('categoryDescription').value;
                            let error = checkCategorySubCategoryValid(categoryName, categoryDescription)
                            if (error) {
                                Swal.fire({
                                    icon: "error",
                                    title: "Validation Error",
                                    text: error,
                                });
                                return
                            }

                            try {
                                const res = await axios.post('/admin/categories', {
                                    categoryName,
                                    categoryDescription
                                })

                                if (res.status === 200) {
                                    await Swal.fire({
                                        text: `Category has been added`,
                                        icon: "success",
                                        timer: 2000,
                                        showConfirmButton: false
                                    });

                                    setTimeout(() => {
                                        window.location.reload()
                                    }, 2000)
                                }
                            } catch (err) {
                                console.error(err);
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                    text: err.response?.data?.error || "An error occurred"
                                });
                            }
                        }

                        function editCategoryModel(e, _id) {
                            const categorydata = e.target.closest('button');
                            const { categoryName, categoryDescription } = JSON.parse(categorydata.getAttribute('data-category-item'));

                            document.getElementById('categoryNameEdit').value = categoryName;
                            document.getElementById('categoryDescriptionEdit').value = categoryDescription;

                            const editcategoryDiv = document.getElementById('editcategoryDiv');
                            let editButton = document.getElementById('editcategoryButton');

                            if (!editButton) {
                                editButton = document.createElement('button');
                                editButton.textContent = "Edit";
                                editButton.id = 'editcategoryButton';
                                editButton.classList.add('btn', 'btn-primary');
                                editcategoryDiv.appendChild(editButton);
                            }

                            editButton.onclick = (event) => editCategory(event, _id);
                        }

                        async function editCategory(event, ID) {
                            event.preventDefault();
                            const categoryName = document.getElementById('categoryNameEdit').value;
                            const categoryDescription = document.getElementById('categoryDescriptionEdit').value;

                            let error = checkCategorySubCategoryValid(categoryName, categoryDescription);
                            if (error) {
                                Swal.fire({
                                    icon: "error",
                                    title: "Validation Error",
                                    text: error,
                                });
                                return;
                            }

                            try {
                                const response = await axios.put(`/admin/categories/${ID}`, {
                                    categoryName,
                                    categoryDescription
                                });

                                $('#editCategoryModel').modal('hide');

                                if (response.status === 200) {
                                    Swal.fire({
                                        text: `Category has been edited`,
                                        icon: "success",
                                        timer: 2000,
                                        showConfirmButton: false
                                    });

                                    const row = document.getElementById(`category-row-${ID}`);
                                    if (row) {
                                        row.cells[0].innerText = categoryName;
                                        row.cells[1].innerText = categoryDescription;

                                        const editBtn = row.querySelector('button[data-category-item]');
                                        if (editBtn) {
                                            const currentData = JSON.parse(editBtn.getAttribute('data-category-item'));
                                            currentData.categoryName = categoryName;
                                            currentData.categoryDescription = categoryDescription;
                                            editBtn.setAttribute('data-category-item', JSON.stringify(currentData));
                                        }
                                    }
                                }

                            } catch (err) {
                                console.error(err);
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                    text: err.response?.data?.error || "An error occurred"
                                });
                            }
                        }

                        async function listUnlistCategory(btn, ID, list) {
                            try {
                                const isListing = list === 'true' || list === true;
                                const action = isListing ? 'list' : 'unlist';

                                const result = await Swal.fire({
                                    title: "Are you sure?",
                                    text: `Do you want to ${action} this category?`,
                                    icon: "warning",
                                    showCancelButton: true,
                                    confirmButtonColor: "#3085d6",
                                    cancelButtonColor: "#d33",
                                    confirmButtonText: "Yes"
                                });

                                if (!result.isConfirmed) return;

                                const response = await axios.patch(`/admin/categories/${ID}`, {
                                    list: isListing
                                });

                                if (response.status === 200) {
                                    Swal.fire({
                                        text: `You ${isListing ? 'listed' : 'unlisted'} the category`,
                                        icon: "success",
                                        timer: 2000,
                                        showConfirmButton: false
                                    });

                                    const pTag = btn.querySelector('p');
                                    if (isListing) {
                                        pTag.innerHTML = '<i class="fas fa-times-circle"></i> Unlist';
                                        btn.setAttribute('onclick', `listUnlistCategory(this, '${ID}', false)`);
                                    } else {
                                        pTag.innerHTML = '<i class="fas fa-list"></i> List';
                                        btn.setAttribute('onclick', `listUnlistCategory(this, '${ID}', true)`);
                                    }
                                }
                            } catch (err) {
                                console.error(err);
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                    text: err.response?.data?.error || "An error occurred"
                                });
                            }
                        }
                    </script>

    </body>

</html>