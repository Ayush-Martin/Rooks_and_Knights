<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %>

<body>
    <div class="wrapper">
        <%- include('./partials/slidebar') %>

        <div id="content" class="container-fluid">
            <h1 class="m-b-10">Products</h1>
            <form action="/" class="search-bar">
                <input type="text" class="form-control" placeholder="Search by ProductName">
                <button class="btn-primary btn m-t-3">Search</button>
            </form>

            <div class="m-t-30 m-b-30">
                <a href="/admin/products/addProduct" class="text-decoration-none">
                    <i class="fa fa-plus fs-20" style="float: left;"></i>
                    <p class="fs-20">Add New Product</p>
                </a>
            </div>

            <div class="table-responsive">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productList.forEach(product => {%>
                            <tr>
                                <td><%= product.productName %></td>
                                <td><%= product.price %></td>
                                <td><%= product.stock %></td>
                                <td><%= product.categoryID.categoryName %></td>
                                <td><%= product.subCategoryID.subCategoryName %></td>
                                <td>
                                    <form action="/admin/products/viewEditProduct/<%= product._id %>" method="get">
                                        <button class="btn btn-dark btn-sm"><i class="fa fa-ban"></i> View/Edit</button>
                                    </form>
                                    
                                </td>
                                <td>
                                    <form action="/admin/products/deleteProduct/<%= product._id %>/?_method=DELETE" method="post">
                                        <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Remove</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>  

    <%- include('./partials/footer') %>
</body>
</html>