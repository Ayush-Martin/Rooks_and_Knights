<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %>

    <body>
        <div class="wrapper">
            <%- include('./partials/slidebar') %>

                <div id="content" class="container-fluid">
                    <h1 class="m-b-10 admin_title">Products</h1>

                    <div class="container p-b-50">
                        <div class="search-bar-container">
                            <!-- Search Form -->
                            <form action="/admin/products" method="GET" class="search-input-group">
                                <input type="text" id="search-input" name="search" class="form-control search-input"
                                    placeholder="search" value="<%= searchFilter ? searchFilter:null %>">
                                <a href="/admin/products?search=">
                                    <button type="button" class="btn-clear" id="clear-btn">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </a>
                                <button type="submit" class="btn-search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>

                        </div>
                        <a href="/admin/products/add" class="text-decoration-none">
                            <button class="btn-add">
                                <i class="fas fa-plus"></i> New Product
                            </button>
                        </a>


                    </div>

                    <div class="table-responsive">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Offer(%)</th>
                                    <th>Stock</th>
                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productList.forEach(product=> {%>
                                    <tr>
                                        <td><img src="<%= product.productImage1 %>" alt="" style="width: 50px;"></td>
                                        <td>
                                            <%= product.productName %>
                                        </td>
                                        <td>
                                            <%= product.price %>
                                        </td>
                                        <td>
                                            <%= product.offer %>
                                        </td>
                                        <td>
                                            <%= product.stock %>
                                        </td>
                                        <td>
                                            <%= product.categoryID.categoryName %>
                                        </td>
                                        <td>
                                            <%= product.subCategoryID.subCategoryName %>
                                        </td>
                                        <td>
                                            <form action="/admin/products/<%= product._id %>" method="get">
                                                <button class="btn btn-dark btn-sm"><i class="fas fa-pencil-alt"></i>
                                                </button>
                                            </form>

                                        </td>
                                        <td>

                                            <button class="btn btn-sm fs-15"
                                                onclick="listUnlistProduct(this, '<%=product._id%>', '<%= !product.isListed %>')">
                                                <p>
                                                    <% if(product.isListed){ %>
                                                        <i class="fas fa-times-circle"></i> Unlist

                                                        <% }else{ %>
                                                            <i class="fas fa-list"></i> List
                                                            <% } %>
                                                </p>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>

                            </tbody>
                        </table>
                    </div>
                    <div class="flex-c-m flex-w w-full p-t-45 gap-10">
                        <!-- Previous Button -->
                        <a href="/admin/products?search=<%= searchFilter %>&&page=<%= (currentPage>1)? Number(currentPage)-1:1 %>"
                            class="m-r-20 text-dark">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                        <P class="m-r-20 text-dark">page : <%= currentPage %> of <%= Math.ceil(totalNoOfPages) %>
                        </P>
                        <!-- Next Button -->
                        <a href="/admin/products?search=<%= searchFilter %>&&page=<%= (currentPage<totalNoOfPages)? Number(currentPage)+1:currentPage %>"
                            class=" text-dark">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>

                    </div>

                </div>
        </div>

        <%- include('./partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script>
                function remove(productID) {
                    Swal.fire({
                        title: "Are you sure?",
                        text: `Do you want to delete this product`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch(`/admin/products/deleteProduct/${productID}`, {
                                method: "DELETE",
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            }).then(res => res.json())
                                .then((data) => {
                                    if (data.validationError) {
                                        let timerInterval;
                                        Swal.fire({
                                            title: "Validation Error",
                                            html: "You will be redirected to login in <b></b> milliseconds.",
                                            timer: 2000,
                                            timerProgressBar: true,
                                            didOpen: () => {
                                                Swal.showLoading();
                                                const timer = Swal.getPopup().querySelector("b");
                                                timerInterval = setInterval(() => {
                                                    timer.textContent = `${Swal.getTimerLeft()}`;
                                                }, 100);
                                            },
                                            willClose: () => {
                                                clearInterval(timerInterval);
                                            }
                                        }).then((result) => {
                                            /* Read more about handling dismissals below */
                                            if (result.dismiss === Swal.DismissReason.timer) {

                                                window.location.href = data.redirectUrl;
                                            }
                                        });
                                    }

                                    if (data.success) {
                                        Swal.fire({
                                            title: "Removed!",
                                            text: "You removed the product",
                                            icon: "success",
                                            timer: 2000
                                        });

                                        setTimeout(() => {
                                            window.location.reload()
                                        }, 2000)

                                    }
                                })
                        }
                    });

                }

                async function listUnlistProduct(btn, ID, list) {
                    try {
                        const isListing = list === 'true' || list === true;
                        const action = isListing ? 'list' : 'unlist';

                        const result = await Swal.fire({
                            title: "Are you sure?",
                            text: `Do you want to ${action} this product?`,
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Yes"
                        });

                        if (!result.isConfirmed) return;

                        const response = await axios.patch(`/admin/products/${ID}?list=${isListing}`);

                        if (response.status === 200) {
                            Swal.fire({
                                text: `You ${isListing ? 'listed' : 'unlisted'} the product`,
                                icon: "success",
                                timer: 2000,
                                showConfirmButton: false
                            });

                            const pTag = btn.querySelector('p');
                            if (isListing) {
                                pTag.innerHTML = '<i class="fas fa-times-circle"></i> Unlist';
                                btn.setAttribute('onclick', `listUnlistProduct(this, '${ID}', false)`);
                            } else {
                                pTag.innerHTML = '<i class="fas fa-list"></i> List';
                                btn.setAttribute('onclick', `listUnlistProduct(this, '${ID}', true)`);
                            }
                        }
                    } catch (err) {
                        console.error(err);
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: err.response?.data?.error || "An error occurred"
                        });
                    }
                }
            </script>
    </body>

</html>