<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header') %>

    <body>
        <div class="wrapper">
            <%- include('./partials/slidebar') %>

                <div id="content" class="container-fluid">
                    <h1 class="m-b-10 admin_title">Returns</h1>


                    <div class="table-responsive">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Order Date</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Amount Paid</th>
                                    <th>Return Reason</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% returnList.forEach((returnItem)=>{ %>
                                    <% returnItem.products.forEach((product)=>{ %>
                                        <% if(product.returnStatus!='notRequested' ) {%>
                                            <tr id="row_<%= product._id %>">
                                                <td>
                                                    <%= returnItem.userID.email %>
                                                </td>
                                                <td>
                                                    <%= returnItem.createdAt.toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <%= product.productID.productName %>
                                                </td>
                                                <td>
                                                    <%= product.quantity %>
                                                </td>
                                                <td>
                                                    <%= product.amountPaid %>
                                                </td>
                                                <td>
                                                    <%= product.returnReason %>
                                                </td>
                                                <td>
                                                    <%= product.returnStatus %>
                                                </td>
                                                <td>
                                                    <% if(product.returnStatus=='requested' ) {%>
                                                        <form action=""
                                                            onsubmit="changeReturnStatus('<%=returnItem._id%>','<%=product._id%>',event , '<%=returnItem.userID._id%>','<%=product.amountPaid%>' ,'<%=returnItem.paymentMethod%>','<%= product.productID._id %>','<%= product.quantity %>')">
                                                            <select
                                                                id="returnStatus_<%= returnItem._id%>_<%= product._id %>"
                                                                name="options"
                                                                style="flex: 1; padding: 8px; margin-right: 10px;">
                                                                <option value="" disabled selected>Select an option
                                                                </option>
                                                                <option value="approved">Approve</option>
                                                                <option value="rejected">Reject</option>
                                                            </select>
                                                            <button type="submit"
                                                                style="padding: 8px 15px; background-color: #4CAF50; color: white; border: none; border-radius: 3px; cursor: pointer;">
                                                                Save
                                                            </button>
                                                        </form>
                                                        <% } %>
                                                </td>
                                            </tr>
                                            <% } %>

                                                <% }) %>

                                                    <% }) %>
                            </tbody>
                        </table>


                    </div>

                    <div class="flex-c-m flex-w w-full p-t-45 gap-10">
                        <!-- Previous Button -->
                        <a href="/admin/returns?page=<%= (currentPage>1)? Number(currentPage)-1:1 %>"
                            class="m-r-20 text-dark">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                        <P class="m-r-20 text-dark">page : <%= currentPage %> of <%= Math.ceil(totalNoOfPages) %>
                        </P>
                        <!-- Next Button -->
                        <a href="/admin/returns?page=<%= (currentPage<totalNoOfPages)? Number(currentPage)+1:currentPage %>"
                            class=" text-dark">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>

                    </div>

                </div>

        </div>

        <%- include('./partials/footer') %>


            <script>

                async function changeReturnStatus(orderID, orderItemID, event, userID, amount, paymentMethod, productID, quantity) {
                    event.preventDefault(); // Prevents the form from submitting

                    const returnStatus = document.getElementById(`returnStatus_${orderID}_${orderItemID}`).value;

                    if (!returnStatus) {
                        Swal.fire({
                            icon: "warning",
                            title: "Selection Required",
                            text: "Please select a status (Approve or Reject).",
                        });
                        return;
                    }

                    const result = await Swal.fire({
                        title: "Are you sure?",
                        text: `Do you want to ${returnStatus === 'approved' ? 'approve' : 'reject'} this request?`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes"
                    });

                    if (result.isConfirmed) {
                        try {
                            const res = await axios.patch(`/admin/returns`, {
                                orderID,
                                orderItemID,
                                returnStatus,
                                userID,
                                amount,
                                paymentMethod,
                                productID,
                                quantity
                            });

                            const data = res.data;

                            if (data.success) {
                                await Swal.fire({
                                    icon: "success",
                                    title: "Updated",
                                    text: `Return status has been ${returnStatus}`,
                                    timer: 2000,
                                    showConfirmButton: false
                                });

                                // Dynamic DOM Update
                                const row = document.getElementById(`row_${orderItemID}`);
                                if (row) {
                                    // Update Status Cell (Index 6 based on table header)
                                    const statusCell = row.cells[6];
                                    statusCell.innerText = returnStatus;

                                    // Clear Action Cell (Index 7)
                                    const actionCell = row.cells[7];
                                    actionCell.innerHTML = '';
                                }
                            }
                        } catch (err) {
                            console.error(err);
                            Swal.fire({
                                icon: "error",
                                title: "Error",
                                text: err.response?.data?.error || "Something went wrong!",
                            });
                        }
                    }
                }

            </script>
    </body>

</html>